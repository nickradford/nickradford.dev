---
import "@fontsource/geist";
import "@fontsource/geist-mono";
import "../styles/tailwind.css";
import { PageHeader } from "../components";
import VercelAnalytics from "../components/VercelAnalytics.astro";
const {
  title = "Nick Radford",
  description = "Senior Fullâ€‘Stack Engineer in SF.",
  og = "https://nickradford.dev/og.png",
  type = "website",
} = Astro.props as {
  title?: string;
  description?: string;
  og?: string;
  type?: string;
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <!-- other meta tags -->
    <meta property="og:image" content={og} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:alt" content={title} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url.href} />

    <!-- og title and description -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={import.meta.env.PROD
        ? `https://nickradford.dev${og}`
        : `http://localhost:4321${og}`}
    />

    <link rel="icon" href="/favicon.ico" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Nick Radford (dot) Dev"
      href={new URL("feeds/atom.xml", Astro.site)}
    />
    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
    <title>{title}</title>
    <meta name="description" content={description} />
    <VercelAnalytics />
  </head>
  <body
    class="transition-colors bg-ivory text-zinc-900 dark:bg-zinc-950 dark:text-zinc-50"
  >
    <div class="flex flex-col items-center w-full min-h-fill-available">
      <PageHeader client:load />
      <slot />
    </div>
  </body>
</html>
