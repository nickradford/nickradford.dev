---
import "@fontsource/geist";
import "@fontsource/geist-mono";
import "../styles/tailwind.css";
import PageHeader from "../components/PageHeader.astro";

type Props = {
  title?: string;
  description?: string;
  og?: string;
  type?: string;
};

// import VercelAnalytics from "../components/VercelAnalytics.astro";
// import VercelSpeedInsights from "../components/VercelSpeedInsights.astro";
const {
  title = "Nick Radford",
  description = "Senior Fullâ€‘Stack Engineer in SF.",
  og = undefined,
  type = "website",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <!-- other meta tags -->
    {
      og && (
        <>
          <meta property="og:image" content={og} />
          <meta property="og:image:width" content="1200" />
          <meta property="og:image:height" content="630" />
          <meta property="og:image:type" content="image/png" />
          <meta property="og:image:alt" content={title} />
          <meta property="og:type" content={type} />
          <meta property="og:url" content={Astro.url.href} />
        </>
      )
    }

    <!-- og title and description -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {
      og && (
        <meta
          name="twitter:image"
          content={
            import.meta.env.PROD ? `https://nickradford.dev${og}` : `http://localhost:4321${og}`
          }
        />
      )
    }

    <link rel="icon" href="/favicon.ico" />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/regular/style.css"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Nick Radford (dot) Dev"
      href={new URL("feeds/atom.xml", Astro.site)}
    />
    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) && matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="transition-colors bg-ivory text-zinc-900 dark:bg-zinc-950 dark:text-zinc-50">
    <div class="flex flex-col items-center w-full min-h-fill-available">
      <PageHeader transition:persist />
      <slot />
      <script
        defer
        is:inline
        src="https://st.nickradford.dev/script.js"
        data-website-id="310a6df8-1977-4cdc-9650-6fc42b11dd23"
        data-domains="nickradford.dev"></script>
      <script>
        function updateActiveLinks() {
          const currentPath = window.location.pathname;

          const isActive = (href: string): boolean => {
            if (href === "/") {
              return currentPath === "/";
            }
            return currentPath.startsWith(href);
          };

          const navLinks = [
            { label: "home", href: "/" },
            { label: "writing", href: "/blog" },
            { label: "work", href: "/work" },
          ];

          // Update desktop nav
          const pageHeaderNav = document.querySelector("#page-header-nav");
          if (pageHeaderNav) {
            navLinks.forEach((navLink) => {
              const links = Array.from(
                pageHeaderNav.querySelectorAll(
                  `a[href="${navLink.href}"]:not([data-not-active-styled])`,
                ),
              );
              const active = isActive(navLink.href);

              links.forEach((link) => {
                if (active) {
                  link.classList.add("text-yellow", "dark:text-yellow", "md:bg-yellow/5");
                } else {
                  link.classList.remove("text-yellow", "dark:text-yellow", "md:bg-yellow/5");
                }
              });
            });
          }

          // Update mobile nav
          const pageHeaderNavMobile = document.querySelector("#page-header-nav-mobile");
          if (pageHeaderNavMobile) {
            navLinks.forEach((navLink) => {
              const links = Array.from(
                pageHeaderNavMobile.querySelectorAll(
                  `a[href="${navLink.href}"]:not([data-not-active-styled])`,
                ),
              );
              const active = isActive(navLink.href);

              links.forEach((link) => {
                if (active) {
                  link.classList.add("text-yellow", "dark:text-yellow");
                } else {
                  link.classList.remove("text-yellow", "dark:text-yellow");
                }

                // Handle mobile underline
                const span = link.querySelector("span");
                if (active && !span) {
                  const newSpan = document.createElement("span");
                  newSpan.className =
                    "md:hidden absolute bottom-0 left-0 right-0 h-[2px] bg-yellow";
                  link.appendChild(newSpan);
                } else if (!active && span) {
                  span.remove();
                }
              });
            });
          }
        }

        // Initial update on page load
        updateActiveLinks();

        // Update on back/forward button
        window.addEventListener("popstate", updateActiveLinks);

        // Update on Swup content replacement
        document.addEventListener("swup:enable", () => {
          if ((window as any).swup) {
            (window as any).swup.options.animateHistoryBrowsing = true;
            (window as any).swup.hooks.on("animation:in:start", updateActiveLinks);
          }
        });
      </script>
    </div>
  </body>
</html>
