---
import "../styles/tailwind.css";
import { PageHeader } from "../components";
import VercelAnalytics from "../components/VercelAnalytics.astro";
const {
  title = "Nick Radford (dot) Dev",
  description = "Software engineer, pool shark, and amateur improviser.",
} = Astro.props as { title?: string; description?: string };
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <link rel="icon" href="/favicon.ico" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Nick Radford (dot) Dev"
      href={new URL("feeds/atom.xml", Astro.site)}
    />
    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
    <title>{title}</title>
    <meta name="description" content={description} />
    <VercelAnalytics />
  </head>
  <body
    class="transition-colors bg-ivory text-zinc-900 dark:bg-zinc-950 dark:text-zinc-50"
  >
    <div class="flex flex-col items-center w-full min-h-fill-available">
      <PageHeader client:load />
      <slot />
    </div>
  </body>
</html>
