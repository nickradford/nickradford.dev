---
import ThemeToggle from "./ThemeToggle.tsx";

const currentPath = Astro.url.pathname;

// Determine if a link is active
const isActive = (href: string): boolean => {
  if (href === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(href);
};

const navLinks = [
  { label: "home", href: "/" },
  { label: "writing", href: "/blog" },
  { label: "work", href: "/work" },
];
---

<!-- Desktop Header -->
<div
  class="sticky top-0 z-20 w-full bg-ivory/70 dark:bg-zinc-950/70 backdrop-blur-md border-b border-l border-r border-orange/20 dark:border-zinc-800 hidden md:flex"
>
  <div class="flex-1 pt-6 px-8 md:px-16 border-r border-orange/20 dark:border-zinc-800"></div>
  <nav
    id="page-header-nav"
    class="max-w-4xl w-full flex items-stretch relative divide-x divide-orange/20 dark:divide-zinc-800 border-r border-orange/20 dark:border-zinc-800"
  >
    <div class="flex items-center border-orange/20 dark:border-zinc-800">
      <a
        href="/"
        class="text-lg px-8 md:px-16 h-full flex justify-center items-center font-geist-mono font-medium text-zinc-800 hover:text-orange dark:text-zinc-100 dark:hover:text-orange transition-colors hover:bg-orange/5"
        data-not-active-styled="true"
      >
        Nick&nbsp;Radford
      </a>
    </div>
    <div
      class="flex-grow flex items-center justify-center border-r border-orange/20 dark:border-zinc-800"
    >
      <ul
        class={"flex px-0 *:py-4 space-x-8 md:space-x-0 text-sm w-full *:flex-1 *:text-center *:px-4"}
      >
        {
          navLinks.map(({ label, href }) => {
            const active = isActive(href);
            return (
              <a
                href={href}
                class={`relative inline-block transition-colors text-sm font-geist-mono font-medium text-zinc-600 hover:text-orange dark:text-zinc-400 dark:hover:text-orange md:border-r md:border-orange/20 dark:md:border-zinc-800 md:last:border-none ${
                  active ? "text-orange dark:text-orange md:bg-orange/5" : ""
                }`}
              >
                {label}
              </a>
            );
          })
        }
      </ul>
    </div>
    <div class="flex items-center justify-end">
      <ThemeToggle client:load />
    </div>
  </nav>
  <div class="flex-1 pt-6 px-8 md:px-16"></div>
</div>

<!-- Mobile Header -->
<div
  class="sticky top-0 z-20 w-full bg-ivory/70 dark:bg-zinc-950/70 backdrop-blur-md border-b border-orange/20 dark:border-zinc-800 md:hidden px-6 pt-6"
>
  <nav id="page-header-nav-mobile" class="flex items-center justify-between relative">
    <a
      href="/"
      class="absolute -top-3 text-sm font-geist-mono font-medium text-zinc-600 hover:text-orange dark:text-zinc-400 dark:hover:text-orange transition-colors"
      data-not-active-styled="true"
    >
      Nick Radford
    </a>
    <ul class="flex px-0 py-4 space-x-8 text-sm">
      {
        navLinks.map(({ label, href }) => {
          const active = isActive(href);
          return (
            <a
              href={href}
              class={`relative inline-block transition-colors text-sm font-geist-mono font-medium text-zinc-600 hover:text-orange dark:text-zinc-400 dark:hover:text-orange ${
                active ? "text-orange dark:text-orange" : ""
              }`}
            >
              {label}
              {active && (
                <span class="md:hidden absolute bottom-0 left-0 right-0 h-[2px] bg-orange" />
              )}
            </a>
          );
        })
      }
    </ul>
    <div>
      <ThemeToggle client:load />
    </div>
  </nav>
</div>
