---
import { SITE } from "../lib/site";
import ExternalLink from "./ExternalLink.astro";
---

<ExternalLink href={`${SITE}/feeds/atom.xml`} class="inline-block p-2 -ml-2 group">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 256 256"
    class="transition-colors text-zinc-600 dark:text-zinc-300 group-hover:text-yellow w-5 h-5"
    fill="currentColor"
    aria-labelledby="rss-feed"
  >
    <rect width="256" height="256" fill="none"></rect>
    <circle cx="60" cy="196" r="12"></circle>
    <path d="M44,112a64,64,0,0,1,64,64"></path>
    <path d="M44,68a108,108,0,0,1,108,108"></path>
    <path d="M44,20A156,156,0,0,1,200,176"></path>
  </svg>
  <span class="sr-only" id="rss-feed"> RSS Feed </span>
</ExternalLink>
